{
    "manifest_version": 3,
    "name": "URL Appender",
    "description": "Simple Chrome extension automates the process of appending custom text to the end of website URLs",
    "version": "1.0.0",
    "permissions": [
      "activeTab",
      "tabs" 
    ],
    
    "action": {
      // "default_popup": "popup.html" // You can remove this if you don't have a popup
    },
    
    "background": {
      "service_worker": "background.js" 
    }
  }
